    <!--Below div "tax-toggle" we have added from bootstarp so that we can add additional tax value.-->
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3"> <!--Here, "row-cols-lg-3" means that all columns in each row will have large size that is defined in the bootstrap website will have only 3 columns.-->
    <% for(let listing of allListings){ %>

        <a href="/listings/<%= listing._id %>" class="listing-link"> <!--On clicking on each image on all listing page you will get directed to all detailed page of that listing-->
            <!--We have copied below code from bootstrap website "https://getbootstrap.com/docs/5.3/components/card/" to give styling to image.-->
            <div class="card col listing-card"> 
                <img                
                    src="<%= listing.image.url %>" 
                    class="card-img-top show-img"  
                    alt="listing_image"
                    style="height: 20rem"
                /> 
                <div class="card-img-overlay"></div><!--We have copied this line from bootstrap website "https://getbootstrap.com/docs/5.3/components/card/" from overlay images so that we can give effects on hovering the card.-->
                                                    <!-- we will use this class "card-img-overlay" to give custom styling.-->

                <div class="card-body">
                    <p class="card-text">
                        <b> <%= listing.title %> </b>
                        <br/>
                        &#8377; <%=listing.price.toLocaleString("en-In")%> / night <!-- We have added this code "&#8377;" for displaying indian rupees symbol on our website.-->
                        <!-- We have added .toLocaleString because this will add commas in number according to indian style-->
                         <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>


<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline")
            {
                info.style.display = "inline";
            }
            else
            {
            info.style.display = "none";
            }
        } 
    });
</script>